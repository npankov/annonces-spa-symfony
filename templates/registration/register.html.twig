{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="card signup_v4 mb-30 bg-light">
        <div class="card-body">
            <h4 class="text-center mt-4 mb-4" style="text-transform: uppercase;">Inscription</h4>
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                    <div class="mt-2 mb-3 d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-danger mt-3 mt-sm-0">Inscrire</button>
                        <a href="{{ path('app_login') }}">ou login</a>
                    </div>
                {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
